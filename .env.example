# Required
APIFY_TOKEN=apify_api_xxx

# Database
# Local default: sqlite:///tracker.db
# Production: postgresql://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=sqlite:///tracker.db

# Scheduler
# In production, disable internal scheduler and use external cron calling /api/cron/daily
ENABLE_INTERNAL_SCHEDULER=0
DAILY_RUN_HOUR=9
CRON_SECRET=change_me_long_random_string

# Fetch behavior
APIFY_ACTOR_ID=apify/instagram-reel-scraper
APIFY_MAX_CONCURRENT_RUNS=5
POLL_BATCH_SIZE=5
FETCH_RETRY_COUNT=2
MANUAL_POLL_ENABLED=1
